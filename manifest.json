{
  "manifest_version": 2,
  "name": "Scua",
  "version": "1.1",
  "description": "Decentralized identity experiment.",

  "icons": {
    "48": "assets/icons/icon-48.png",
    "96": "assets/icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["ui.js"]
    }
  ],

  "content_security_policy": "default-src 'self'; connect-src 'self' wss://* https://dns.google https://cloudflare-dns.com https://*.preload.ipfs.io https://*.did.microsoft.com; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net/;",

  "browser_action": {
    "default_icon": {
      "19": "assets/buttons/button-19.png",
      "38": "assets/buttons/button-38.png"
    },
    "default_title": "Identity",
    "default_popup": "build/scua.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "scua@twinql.com"
    }
  }
}